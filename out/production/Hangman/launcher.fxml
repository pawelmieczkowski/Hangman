<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="LauncherController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <HBox GridPane.rowIndex="1">
        <Button text="EXIT GAME" onAction="#exitGameButton" alignment="CENTER" maxWidth="Infinity" HBox.hgrow="ALWAYS" minWidth="100"/>
        <Button text="PLAY" onAction="#playGameButton" alignment="CENTER" maxWidth="Infinity" HBox.hgrow="ALWAYS" minWidth="100"/>

    </HBox>
    <HBox GridPane.rowIndex="0">
        <Label text="HANGMAN" GridPane.rowIndex="0" alignment="CENTER" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </HBox>
</GridPane>